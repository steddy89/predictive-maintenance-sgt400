# ---- General ----
ENVIRONMENT=dev                          # dev | staging | prod
PROJECT_NAME=SGT400 Predictive Maintenance
LOG_LEVEL=INFO

# ---- Azure ML / AI Foundry Endpoints ----
AZURE_ML_ANOMALY_ENDPOINT=https://<your-endpoint>.inference.ml.azure.com/score
AZURE_ML_ANOMALY_KEY=
AZURE_ML_FORECAST_ENDPOINT=https://<your-endpoint>.inference.ml.azure.com/score
AZURE_ML_FORECAST_KEY=

# ---- Microsoft Fabric / Lakehouse ----
FABRIC_WORKSPACE_ID=
FABRIC_LAKEHOUSE_ID=
FABRIC_CONNECTION_STRING=

# ---- Azure Application Insights ----
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=<key>;IngestionEndpoint=https://<region>.in.applicationinsights.azure.com/

# ---- Azure Key Vault ----
AZURE_KEYVAULT_URL=https://<vault-name>.vault.azure.net/

# ---- Azure Container Registry ----
ACR_NAME=predmaintsgt400acr

# ---- Backend ----
BACKEND_PORT=8000
CORS_ORIGINS=["http://localhost:3000","https://predmaint-sgt400-frontend.azurewebsites.net"]

# ---- Alerting ----
ANOMALY_THRESHOLD=0.7
FAILURE_THRESHOLD=0.6
ALERT_WEBHOOK_URLS=[]                    # JSON array of Teams/Slack webhook URLs

